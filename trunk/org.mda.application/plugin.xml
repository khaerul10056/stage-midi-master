<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.mda.application.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Admin Perspective"
            class="org.mda.application.AdminPerspective"
            id="org.mda.application.adminperspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Presentation Perspective"
            class="org.mda.application.PresentationPerspective"
            id="org.mda.application.presentationperspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.e4.ui.workbench.swt.E4Application"
            name="MIDI Driven Application">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="MIDI Driven Application">
         </property>
         <property
               name="applicationXMI"
               value="org.mda.commons.ui/Application.e4xmi">
         </property>
         <!--<property
               name="applicationCSS"
               value="platform:/plugin/org.mda.commons.ui/css/blue-gradient.css">
         </property>-->
         <property
               name="lifeCycleURI"
               value="bundleclass://org.mda.application/org.mda.application.Application">
         </property>
      </product>
   </extension>

</plugin>
