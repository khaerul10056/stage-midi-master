<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.mda.commons.ui.config.ConfigHandler"
            id="org.mda.commons.ui.commands.Config"
            name="Configuration...">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="fileMenu"
               label="File">
            <command
                  commandId="org.mda.commons.ui.commands.Config"
                  label="Configuration..."
                  style="push"
                  tooltip="Global configurations">
            </command>
         </menu>
      </menuContribution>
   </extension>
   
   <extension point="org.eclipse.ui.commands">
          
      <command
            defaultHandler="org.mda.commons.ui.user.UserHandler"
            id="org.mda.commons.ui.commands.User"
            name="Edit users...">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution locationURI="menu:org.eclipse.ui.main.menu">
         <menu id="fileUser"
               label="User">
            <command
                  commandId="org.mda.commons.ui.commands.User"
                  label="Edit users..."
                  style="push"
                  tooltip="Global configurations">
            </command>
         </menu>
      </menuContribution>
   </extension>
   

   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.mda.commons.ui.commands.ExitHandler"
            id="org.mda.commons.ui.commands.Exit"
            name="Exit">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="fileMenu"
               label="File">
            <command
                  commandId="org.mda.commons.ui.commands.Exit"
                  label="Exit"
                  style="push"
                  tooltip="Exit the application">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
